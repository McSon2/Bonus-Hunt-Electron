{
  "name": "bonus_hunt",
  "version": "1.0.0",
  "description": "App for bonus hunt",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "win": "electron-builder -w",
    "dist": "electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "Maxime Saltet",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.5.0",
    "electron": "^17.1.1",
    "electron-builder": "^22.14.13",
    "electron-rebuild": "^3.2.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/McSon2/Bonus-Hunt-Electron.git"
  },
  "bugs": {
    "url": "https://github.com/McSon2/Bonus-Hunt-Electron/issues"
  },
  "homepage": "https://github.com/McSon2/Bonus-Hunt-Electron#readme",
  "dependencies": {
    "better-sqlite3-multiple-ciphers": "^7.5.1-beta.3"
  },
  "build": {
    "appId": "my-app",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./images/ico.ico"
    },
    "extraFiles": [
      "bh.db"
    ],
    "nsis": {
      "oneClick": false,
      "installerIcon": "./images/ico.ico",
      "uninstallDisplayName": "my-app-uninstaller",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true
    }
  }
}
